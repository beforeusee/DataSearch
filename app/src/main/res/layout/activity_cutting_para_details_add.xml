<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cutting_para_details_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a103.datasearch.CuttingParaDetailsAddActivity">

    <com.example.a103.datasearch.utils.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cutting_para_details_add_customTitleBar"
        android:layout_marginTop="0dp"
        app:left_button_visible="true"
        app:right_button_text="完成"
        app:title_text="添加切削参数"
        app:title_size="20sp"
        app:right_button_text_size="20sp"
        app:left_button_text_size="20sp"
        app:title_background_color="@color/colorPrimary"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/fl_cutting_para_add_details_fragment_container"/>
</LinearLayout>
