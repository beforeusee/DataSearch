<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tool_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a103.datasearch.ToolEditActivity">

    <com.example.a103.datasearch.utils.CustomTitleBar
        android:id="@+id/tool_edit_customTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_background_color="@color/colorPrimary"
        app:title_text="@string/edit_tool"
        app:title_size="20sp"
        app:left_button_visible="true"
        app:right_button_text="完成"
        app:right_button_text_size="20sp"/>

    <FrameLayout
        android:id="@+id/fl_tool_edit_detail_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>

</LinearLayout>
