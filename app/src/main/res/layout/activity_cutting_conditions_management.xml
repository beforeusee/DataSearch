<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cutting_conditions_management"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a103.datasearch.CuttingConditionsManagementActivity">

    <com.example.a103.datasearch.utils.CustomTitleBar
        android:id="@+id/cutting_conditions_management_customTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:left_button_visible="true"
        app:right_button_text="完成"
        app:right_button_text_size="20sp"
        app:title_background_color="@color/colorPrimary"
        app:title_text="切削条件分类管理"
        app:title_size="20sp"/>

    <include layout="@layout/add_bar"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cutting_conditions_management_recycler_view"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
