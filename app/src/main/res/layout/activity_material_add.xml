<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_material_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a103.datasearch.MaterialAddActivity">

    <com.example.a103.datasearch.utils.CustomTitleBar
        android:id="@+id/material_detail_customTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:left_button_text="取消"
        app:right_button_text="完成"
        app:title_text="添加材料"
        app:title_size="20sp"
        app:title_background_color="@color/colorPrimary"
        />
    <LinearLayout
        android:id="@+id/ll_material_add_detail_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/material_detail_customTitleBar"
        >

    </LinearLayout>

</LinearLayout>
