<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cutting_conditions_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a103.datasearch.CuttingConditionsAddActivity">

    <com.example.a103.datasearch.utils.CustomTitleBar
        android:id="@+id/cutting_conditions_add_customTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:title_background_color="@color/colorPrimary"
        app:left_button_visible="true"
        app:title_text="添加切削条件组"
        app:right_button_text="完成"
        app:title_size="20sp"
        app:right_button_text_size="20sp"/>

    <FrameLayout
        android:id="@+id/fl_cutting_conditions_add_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>

</LinearLayout>
