<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tool_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a103.datasearch.ToolDetailActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="刀具信息"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:id="@+id/tv_tool_title"/>
    <TableRow
        android:paddingBottom="15dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:layout_below="@id/tv_tool_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tr_tool_img_cb">

        <ImageView
            android:id="@+id/iv_tool_picture"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

        <CheckBox
            android:id="@+id/cb_tool_used"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="是否使用该刀具"
            android:textSize="20sp"
            />
    </TableRow>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tool_scrollView"
        android:layout_below="@+id/tr_tool_img_cb"
        android:layout_above="@+id/tr_tool_btn_cancel_edit_commit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingEnd="10dp"
                android:stretchColumns="1">

                <TableRow android:paddingBottom="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="刀具名称(NT)"
                        android:textSize="23sp"
                        android:gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="刀具类型(TT)"
                        android:textSize="23sp"/>
                </TableRow>

                <TableRow android:paddingBottom="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_name"
                        android:text="整体式硬质合金面铣立铣刀"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:enabled="false"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_type"
                        android:text="面铣立铣刀"
                        android:textSize="20sp"
                        android:enabled="false"/>
                </TableRow>

                <TableRow android:paddingBottom="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="刀具型号(ST)"
                        android:textSize="23sp"
                        android:gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="刀具制造商(BT)"
                        android:textSize="23sp"/>
                </TableRow>

                <TableRow android:paddingBottom="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_serial"
                        android:text="R215.H4-12050DAK08P 1620"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:enabled="false"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_brand"
                        android:text="山特维克可乐满"
                        android:textSize="20sp"
                        android:enabled="false"/>
                </TableRow>

                <TableRow android:paddingBottom="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="切削直径(DC)"
                        android:textSize="23sp"
                        android:gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="最大切深(APMX)"
                        android:textSize="23sp"/>
                </TableRow>

                <TableRow android:paddingBottom="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_cuttingDiameter"
                        android:text="12mm"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:enabled="false"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_depthOfCutMaximum"
                        android:text="12mm"
                        android:textSize="20sp"
                        android:enabled="false"/>
                </TableRow>

                <TableRow android:paddingBottom="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="最大坡走铣角度 (RMPX)"
                        android:textSize="23sp"
                        android:gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="有用长度(LU)"
                        android:textSize="23sp"/>
                </TableRow>

                <TableRow android:paddingBottom="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_maxRampingAngle"
                        android:text="5 deg"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:enabled="false"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_usableLength"
                        android:text="16 mm"
                        android:textSize="20sp"
                        android:enabled="false"/>
                </TableRow>

                <TableRow android:paddingBottom="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="周边有效切削刃数(ZEFP)"
                        android:textSize="23sp"
                        android:gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="机床侧适配接口(ADINTMS)"
                        android:textSize="23sp"/>
                </TableRow>

                <TableRow android:paddingBottom="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_peripheralEffectiveCuttingEdgeCount"
                        android:text="4"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:enabled="false"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_adaptiveInterfaceMachineDirection"
                        android:text="Cylindrical shank(DIN 1835-A/DIN6535-HA)-metric:12"
                        android:textSize="20sp"
                        android:enabled="false"/>
                </TableRow>

                <TableRow android:paddingBottom="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="刀柄直径公差(TCDCON)"
                        android:textSize="23sp"
                        android:gravity="left"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="材质类型(GRADE)"
                        android:textSize="23sp"/>
                </TableRow>

                <TableRow android:paddingBottom="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_connectionDiameterTolerance"
                        android:text="h8"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:enabled="false"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_grade"
                        android:text="1620"
                        android:textSize="20sp"
                        android:enabled="false"/>
                </TableRow>

                <TableRow android:paddingBottom="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="基底(SUBSTRATE)"
                        android:textSize="23sp"
                        android:gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="涂层(COATING)"
                        android:textSize="23sp"/>
                </TableRow>

                <TableRow android:paddingBottom="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_substrate"
                        android:text="HC"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:enabled="false"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_coating"
                        android:text="PVD TiAIN"
                        android:textSize="20sp"
                        android:enabled="false"/>
                </TableRow>

                <TableRow android:paddingBottom="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="基本标准组(BSG)"
                        android:textSize="23sp"
                        android:gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="冷却液入口型式代码(CNSC)"
                        android:textSize="23sp"/>
                </TableRow>

                <TableRow android:paddingBottom="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_basicStandardGroup"
                        android:text="COROMANT"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:enabled="false"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_coolantEntryStyleCode"
                        android:text="0:without coolant"
                        android:textSize="20sp"
                        android:enabled="false"/>
                </TableRow>

                <TableRow android:paddingBottom="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="连接直径(DCON)"
                        android:textSize="23sp"
                        android:gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="功能长度(LF)"
                        android:textSize="23sp"/>
                </TableRow>

                <TableRow android:paddingBottom="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_connectionDiameter"
                        android:text="12 mm"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:enabled="false"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_functionalLength"
                        android:text="93 mm"
                        android:textSize="20sp"
                        android:enabled="false"/>
                </TableRow>

                <TableRow android:paddingBottom="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="容屑槽螺旋角(FHA)"
                        android:textSize="23sp"
                        android:gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="径向前角(GAMF)"
                        android:textSize="23sp"/>
                </TableRow>

                <TableRow android:paddingBottom="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_fluteHelixAngle"
                        android:text="50 deg"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:enabled="false"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_radialRakeAngle"
                        android:text="-18 deg"
                        android:textSize="20sp"
                        android:enabled="false"/>
                </TableRow>

                <TableRow android:paddingBottom="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="轴向前角(GAMP)"
                        android:textSize="23sp"
                        android:gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="最大重新研磨次数(NORGMX)"
                        android:textSize="23sp"/>
                </TableRow>

                <TableRow android:paddingBottom="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_axialRakeAngle"
                        android:text="6 deg"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:enabled="false"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_maximumRegrinds"
                        android:text="3"
                        android:textSize="20sp"
                        android:enabled="false"/>
                </TableRow>

                <TableRow android:paddingBottom="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="最大转速(RPMX)"
                        android:textSize="23sp"
                        android:gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="部件重量(WT)"
                        android:textSize="23sp"/>
                </TableRow>

                <TableRow android:paddingBottom="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_maxRotationalSpeed"
                        android:text="6 deg"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:enabled="false"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_weight"
                        android:text="0.16 kg"
                        android:textSize="20sp"
                        android:enabled="false"/>
                </TableRow>

                <TableRow android:paddingBottom="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="寿命周期状态(LCS)"
                        android:textSize="23sp"
                        android:gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="适合加工材料(MSM)"
                        android:textSize="23sp"/>
                </TableRow>

                <TableRow android:paddingBottom="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_lifeCycleState"
                        android:text="已发布"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:enabled="false"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_suitableForMaterial"
                        android:text="铝合金"
                        android:textSize="20sp"
                        android:enabled="false"/>
                </TableRow>

                <TableRow android:paddingBottom="5dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="适用场合(AS)"
                        android:textSize="23sp"
                        android:gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="待定项()"
                        android:textSize="23sp"/>
                </TableRow>

                <TableRow android:paddingBottom="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_application"
                        android:text="面铣"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:enabled="false"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_tool_todo"
                        android:text="待定项"
                        android:textSize="20sp"
                        android:enabled="false"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <TableRow
        android:paddingBottom="0dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tr_tool_btn_cancel_edit_commit"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_tool_cancel"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_tool_edit"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编辑"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_tool_commit"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="提交"
            android:textSize="25sp"/>
    </TableRow>

</RelativeLayout>
